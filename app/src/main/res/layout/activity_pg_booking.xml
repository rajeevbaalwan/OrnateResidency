<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eceff7"
    tools:context="in.evolve.ornateresidency.Activities.PgBookingActivity">

 <ScrollView
     android:scrollbars="none"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:src="@drawable/landing_image1"/>
   <ScrollView
       android:padding="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <android.support.v7.widget.CardView
         app:cardCornerRadius="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <LinearLayout
          android:layout_gravity="bottom"
          android:orientation="vertical"
          android:padding="10dp"
          android:layout_alignParentBottom="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

       <TextView
           android:padding="4dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/pg_name"
           android:textSize="15sp"
           android:textColor="@android:color/black"
           android:textStyle="bold"
           android:text="Pg Name"/>
       <TextView
           android:padding="4dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/pg_address"
           android:textColor="@android:color/darker_gray"
           android:textSize="13sp"
           android:text="Pg Address"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/divider_horizontal"/>
       <HorizontalScrollView
           android:scrollbars="none"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/ic_local_parking_black_48dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Parking"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/ic_tv_black_48dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="TV"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/ic_network_wifi_black_48dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Wifi"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/electricity"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="24*7 Electricity"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/breakfast"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Free Breakfast"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/ic_credit_card_black_48dp"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Card"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/waters"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="24*7 Water"
              android:gravity="center"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/waterheater"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Water Heater"
              android:gravity="center"/>
         </LinearLayout>


         <LinearLayout
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:orientation="vertical">
          <ImageView
              android:padding="10dp"
              android:layout_width="70dp"
              android:layout_height="50dp"
              android:src="@drawable/almirahstorage"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Almirah"
              android:gravity="center"/>
         </LinearLayout>

        </LinearLayout>
       </HorizontalScrollView>
      </LinearLayout>
     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         app:cardCornerRadius="5dp"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <LinearLayout
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
       <TextView
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Amount "
           android:textStyle="bold"
           android:gravity="center"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@drawable/divider_horizontal"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Single Sharing"
            android:gravity="left" />

        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="₹ 15000"
            android:gravity="center"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Double Sharing"
            android:gravity="left" />

        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="₹ 6500"
            android:gravity="center"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Tripple Sharing"
            android:gravity="left" />

        <TextView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="₹ 4000"
            android:gravity="center"/>
       </LinearLayout>
      </LinearLayout>
     </android.support.v7.widget.CardView>

     <android.support.v7.widget.CardView
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:cardCornerRadius="5dp">
      <TextView
          android:padding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Couples are allowed"/>

     </android.support.v7.widget.CardView>

      <Button
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Visit PG"
          android:textStyle="bold"
          android:textSize="20sp"
          android:textColor="@android:color/white"
          android:background="@drawable/landing_round_button"/>
    </LinearLayout>
   </ScrollView>

  </LinearLayout>
 </ScrollView>
</LinearLayout>
